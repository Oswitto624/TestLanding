@model TestLanding.Domain.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = Model.ShortName;
}

<div class="container">
    <div>
        <h4>Сотрудник @Model.ShortName</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class = "col-sm-10">
                @Model.LastName
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class = "col-sm-10">
                @Model.FirstName
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Patronymic)
            </dt>
            <dd class = "col-sm-10">
                @Model.Patronymic
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </dt>
            <dd class = "col-sm-10">
                @Model.DateOfBirth.ToShortDateString()
            </dd>
    
            <hr/>
    
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Department)
            </dt>
            <dd class = "col-sm-10">
                @Model.Department
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Salary)
            </dt>
            <dd class = "col-sm-10">
                @Model.Salary.ToString("C")
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateOfEmployment)
            </dt>
            <dd class = "col-sm-10">
                @Model.DateOfEmployment.ToShortDateString()
            </dd>
        </dl>
    </div>
    <div>
      <a asp-action="Index" class="btn btn-outline-secondary"> Назад к списку </a>
    </div>
</div>
