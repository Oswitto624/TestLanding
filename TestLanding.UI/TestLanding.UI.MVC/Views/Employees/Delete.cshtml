@model TestLanding.Domain.ViewModels.EmployeeViewModel
@{
    ViewData["Title"] = "";
}

<div class="container">
    <h2>Удаление сотрудника</h2>

    <h3>Вы уверены, что хотите удалить этого сотрудника?</h3>
    <div>
        <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Patronymic)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Patronymic)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Department)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Department)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.DateOfEmployment)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.DateOfEmployment)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Salary)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Salary)
                </dd>
            </dl>
    
            <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
                <input type="submit" value="Удалить" class="btn btn-danger" /> |
                <a asp-action="Index">Назад к списку</a>
            </form>
    </div>
</div>